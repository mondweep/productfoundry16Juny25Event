# Live Conditions MCP Server Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Backend API Configuration (Required)
BACKEND_API_URL=http://localhost:5000
API_TIMEOUT=10000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# External API Keys (Optional - MCP server uses backend API)
# These are only needed if MCP server needs direct API access
OPENWEATHER_API_KEY=your_openweather_api_key_here
BOM_API_KEY=your_bom_api_key_here
METSERVICE_API_KEY=your_metservice_api_key_here
GEONET_API_KEY=your_geonet_api_key_here
NSW_RFS_API_KEY=your_nsw_rfs_api_key_here
NZTA_API_KEY=your_nzta_api_key_here

# MCP Server Settings
MCP_SERVER_NAME=live-conditions-mcp-server
MCP_SERVER_VERSION=1.0.0

# Optional: Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000

# Optional: Monitoring and Analytics
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30